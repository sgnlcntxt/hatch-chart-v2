<p id="notice"><%= notice %></p>

<h1>Flies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flies.each do |fly| %>
      <tr>
        <td><%= fly.name %></td>
        <td><%= fly.photo %></td>
        <td><%= fly.description %></td>
        <td><%= link_to 'Show', fly %></td>
        <td><%= link_to 'Edit', edit_fly_path(fly) %></td>
        <td><%= link_to 'Destroy', fly, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fly', new_fly_path %>
