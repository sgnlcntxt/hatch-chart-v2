<p id="notice"><%= notice %></p>

<h1>
  <%= @fishery.name %>
</h1>

<p>
  <%= image_tag @fishery.photo %>
</p>

<p>
  <strong>Location:</strong>
  <%= @fishery.location %>
</p>

<p>
  <%= @fishery.description %>
</p>

<%= link_to 'Edit', edit_fishery_path(@fishery) %> |
<%= link_to 'Back', fisheries_path %>

<hr>

<h1>Hatches</h1>

<table>
  <thead>
    <tr>
      <th>Bug</th>
      <th></th>
      <th>Size Range</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fishery.hatches.each do |hatch| %>
      <tr>
        <td><%= link_to hatch.bug.name, bug_url(hatch.bug) %></td>
        <td><%= image_tag hatch.bug.photo, :size => "260x180" %>
        <td><%= hatch.minimum_size %>-<%= hatch.maximum_size %></td>
        <td><%= hatch.start_month %>/<%= hatch.start_day %></td>
        <td><%= hatch.end_month %>/<%= hatch.end_day %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "hatches/form", hatch: @fishery.hatches.build %>
